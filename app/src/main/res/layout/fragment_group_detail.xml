<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GroupDetailFragment"
    >

  <include
      android:id="@+id/topNewGroupDetailsToolbar"
      layout="@layout/item_group_detail_toolbar"
    />

  <ScrollView
      android:layout_below="@id/topNewGroupDetailsToolbar"
      android:layout_marginBottom="10dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/cirularImageProfile"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:src="@drawable/selecticon"
          android:layout_marginBottom="10dp"
          app:civ_border_width="1dp"
          app:civ_border_color="@color/grey"
          />

      <TextView
          tools:visibility="visible"
          android:id="@+id/selectedMembersTitle"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Group Name"
          android:gravity="center"
          android:fontFamily="@font/nunitosans_semibold"
          android:textColor="@color/black"
          android:layout_margin="8dp"
          android:textSize="24sp"
          />

      <TextView
          tools:visibility="visible"
          android:id="@+id/groupDescription"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          tools:text="This is the hello world and in this video we are gonna talk about hello world and in this "
          android:maxLines="3"
          android:gravity="center"
          android:fontFamily="@font/nunitosans_semibold"
          android:textColor="#8E8D8D"
          android:layout_margin="8dp"
          android:textSize="18sp"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Group Members :"
          android:fontFamily="@font/nunitosans_semibold"
          android:textColor="@color/black"
          android:layout_margin="8dp"
          android:textSize="24sp"
          />

      <androidx.recyclerview.widget.RecyclerView
          tools:listitem="@layout/item_search_user"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />

    </LinearLayout>
  </ScrollView>

</RelativeLayout>