<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.organizations.AddOpportunityFragment">

  <include
      android:id="@+id/topOrgToolBar"
      layout="@layout/toolbar_add_opportunities" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/titleEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter title"
            android:inputType="textMultiLine"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/descriptionEdt"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter Description About Opportunity"
            android:inputType="textMultiLine"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/requiredSkillsEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter Required Skills ( Comma Separated Values )"
            android:inputType="textMultiLine"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/budgetEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter Budget"
            android:inputType="number"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tv_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/nunitosans_semibold"
            android:text="Choose whom do you want to share"
            android:textColor="@color/black"
            android:textSize="25dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:weightSum="2">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_weight="1"
              android:gravity="center">

            <CheckBox
                android:id="@+id/cb_schools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="schools"
                android:textColor="@color/black"
                android:textSize="20dp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_weight="1"
              android:gravity="center">

            <CheckBox
                android:id="@+id/cb_students"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="students"
                android:textColor="@color/black"
                android:textSize="20dp" />
          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:weightSum="2">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_weight="1"
              android:gravity="center">

            <CheckBox
                android:id="@+id/cb_professors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="Professor"
                android:textColor="@color/black"
                android:textSize="20dp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_weight="1"
              android:gravity="center">

            <CheckBox
                android:id="@+id/cb_university"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="University"
                android:textColor="@color/black"
                android:textSize="20dp" />
          </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:weightSum="2">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_weight="1"
              android:gravity="center">

            <CheckBox
                android:id="@+id/cb_Professional"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="Professionals"
                android:textColor="@color/black"
                android:textSize="20dp" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center">

            <CheckBox
                android:id="@+id/cb_research"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunitosans_semibold"
                android:text="Research \nscholar"
                android:textColor="@color/black"
                android:textSize="20dp" />
          </LinearLayout>

        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/agreeAndJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnlogin_back"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Post "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:theme="@style/btn" />

      </LinearLayout>



      <ProgressBar
          android:visibility="visible"
          android:id="@+id/addJobProgressBar"
          style="?android:attr/progressBarStyle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>