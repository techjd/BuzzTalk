<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.organizations.AddOpportunityFragment">

  <include
      android:id="@+id/topOrgToolBar"
      layout="@layout/toolbar_add_opportunities" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/titleEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter title"
            android:inputType="textMultiLine"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/descriptionEdt"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter Description About Opportunity"
            android:inputType="textMultiLine"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/requiredSkillsEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter Required Skills"
            android:inputType="textMultiLine"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:orientation="horizontal">

        <EditText
            android:id="@+id/budgetEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/post_edt_background"
            android:ems="10"
            android:fontFamily="@font/nunitosans_semibold"
            android:gravity="start|top"
            android:hint="Enter Budget"
            android:inputType="number"
            android:padding="20dp"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="10dp"
          android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/agreeAndJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnlogin_back"
            android:fontFamily="@font/nunitosans_bold"
            android:text="Post "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:theme="@style/btn" />

      </LinearLayout>

      <ProgressBar
          android:visibility="gone"
          android:id="@+id/addJobProgressBar"
          style="?android:attr/progressBarStyle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>