<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.newgroup.NewGroupFragment"
    >

  <include
      android:id="@+id/newGroupToolbar"
      layout="@layout/item_new_group"
    />

  <ScrollView
      android:layout_below="@id/newGroupToolbar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Selected Members :"
          android:fontFamily="@font/nunitosans_semibold"
          android:textColor="@color/black"
          android:layout_margin="8dp"
          android:textSize="24sp"
        />

      <androidx.recyclerview.widget.RecyclerView
          tools:listitem="@layout/item_selected_member"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:orientation="horizontal"
          tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Your Connections :"
          android:fontFamily="@font/nunitosans_semibold"
          android:textColor="@color/black"
          android:layout_margin="8dp"
          android:textSize="24sp"
          />
      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:listitem="@layout/item_search_user"
          />

    </LinearLayout>
  </ScrollView>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/newGrpDetailScreen"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:backgroundTint="#78E4FF"
      android:src="@drawable/ic_proceed"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_marginBottom="30dp"
      android:layout_marginEnd="30dp"
      />

</RelativeLayout>