<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuzzTalk" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

<!--        <item name="fontFamily">@font/nunitosans_regular</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="Widget.Material3.Toolbar">
        <item name="android:textSize">40dp</item>
        <item name="fontFamily">@font/nunitosans_bold</item>
    </style>

    <style name="btn" parent="Widget.Material3.Button">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="cornerRadius">1000dp</item>
    </style>
</resources>